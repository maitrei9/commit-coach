name: Marketplace Release

on:
  push:
    tags:
      - 'v*'
  workflow_dispatch:
    inputs:
      version:
        description: 'Version to release (e.g., v1.0.0)'
        required: true
        type: string

jobs:
  release:
    runs-on: ubuntu-latest
    permissions:
      contents: write
      packages: write
      actions: write
      id-token: write

    steps:
      - name: Checkout code
        uses: actions/checkout@v4
        with:
          fetch-depth: 0

      - name: Install pnpm
        uses: pnpm/action-setup@v2
        with:
          version: 8

      - name: Setup Node.js
        uses: actions/setup-node@v4
        with:
          node-version: '24'
          registry-url: 'https://registry.npmjs.org'
          cache: 'pnpm'

      - name: Install dependencies
        run: pnpm install --no-frozen-lockfile

      - name: Run tests
        run: pnpm run test:run

      - name: Build
        run: pnpm run build

      - name: Build action
        run: pnpm run build:action

      - name: Publish to npm
        if: false # Skip npm publishing for now
        run: npm publish
        env:
          NODE_AUTH_TOKEN: ${{ secrets.NPM_TOKEN }}

      - name: Create GitHub Release
        uses: actions/create-release@v1
        env:
          GITHUB_TOKEN: ${{ secrets.GITHUB_TOKEN }}
        with:
          tag_name: ${{ github.ref_name }}
          release_name: Release ${{ github.ref_name }}
          draft: false
          prerelease: false
          body: |
            ## What's New in ${{ github.ref_name }}

            ### Features
            - Intelligent commit analysis with actionable insights
            - Security vulnerability detection
            - Code quality recommendations
            - Test coverage analysis
            - GitHub integration with PR comments and status checks

            ### Usage
            ```yaml
            - uses: rasterandstate/commit-coach@${{ github.ref_name }}
              with:
                github-token: ${{ secrets.GITHUB_TOKEN }}
            ```

            ### Documentation
            - [Configuration Guide](https://github.com/rasterandstate/commit-coach#configuration)
            - [Rules Reference](https://github.com/rasterandstate/commit-coach/blob/main/docs/RULES.md)
            - [Examples](https://github.com/rasterandstate/commit-coach/blob/main/docs/EXAMPLES.md)

      - name: Verify Action
        run: |
          echo "Verifying action.yml syntax..."
          node -e "
            const fs = require('fs');
            const yaml = require('yaml');
            try {
              const content = fs.readFileSync('action.yml', 'utf8');
              const parsed = yaml.parse(content);
              console.log('‚úÖ action.yml is valid');
              console.log('Action name:', parsed.name);
              console.log('Description:', parsed.description);
              console.log('Author:', parsed.author);
            } catch (error) {
              console.error('‚ùå action.yml validation failed:', error.message);
              process.exit(1);
            }
          "

      - name: Upload Release Assets
        uses: actions/upload-release-asset@v1
        env:
          GITHUB_TOKEN: ${{ secrets.GITHUB_TOKEN }}
        with:
          upload_url: ${{ steps.create_release.outputs.upload_url }}
          asset_path: ./dist/action.cjs
          asset_name: action.cjs
          asset_content_type: application/javascript

      - name: Comment on Issue #8
        if: github.event_name == 'push' && startsWith(github.ref, 'refs/tags/v')
        uses: actions/github-script@v7
        with:
          script: |
            const version = context.ref.replace('refs/tags/', '');
            github.rest.issues.createComment({
              issue_number: 8,
              owner: context.repo.owner,
              repo: context.repo.repo,
              body: `üéâ **Release $${version} is ready for marketplace submission!**
              
              The action has been built, tested, and released. Next steps:
              
              - [ ] Submit to GitHub Marketplace for review
              - [ ] Update documentation with marketplace links
              - [ ] Add marketplace badges to README
              
              Release details: https://github.com/$${context.repo.owner}/$${context.repo.repo}/releases/tag/$${version}`
            });
